a=float(input('Введите значение параметра а: '))
b=float(input('Введите значение параметра b: '))
c=float(input('Введите значение параметра c: '))
D=b**2-4*a*c
print('Дискриминант уравнения =',round(D))
if D>0:
    print('Корень 1 равен',(-b+D**0.5)/(2*a),'Корень 2 равен',(-b-D**0.5)/(2*a))
elif D==0:
    print('Корень равен',-b/(2*a))
elif D<0:
    print('У уравнения нет корней')
